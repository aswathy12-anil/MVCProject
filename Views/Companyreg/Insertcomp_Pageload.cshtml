@model MVCProject.Models.Companyreg
@{
    ViewBag.Title = "Insertcomp_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert your details</h2>
<div>
    @using (Html.BeginForm("Insertcomp_Click", "Companyreg", FormMethod.Post))
    {
        <div>
            <label>Company Name</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Email</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>
        <div>
            <label>Phone</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>
        <div>
            <label>Location</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.location)
            @Html.ValidationMessageFor(m => m.location)
        </div>
        <div>
            <label>Website</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.website)
            @Html.ValidationMessageFor(m => m.website)
        </div>
        <div>
            <label>Username</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.username)
            @Html.ValidationMessageFor(m => m.username)
        </div>
        <div>
            <label>Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.pswd)
            @Html.ValidationMessageFor(m => m.pswd)
        </div>
        <div>
            <label>Confirm Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.conpswd)
            @Html.ValidationMessageFor(m => m.conpswd)
        </div>
        <div>
            <input type="submit" value="Register" />
            @Html.DisplayFor(m => m.cdmsg)
        </div>
    }
</div>

