@model MVCProject.Models.UserReg
@{
    ViewBag.Title = "Insertuser_Pageload";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Insert Your Details</h2>
<div>
    @using (Html.BeginForm("Insert_click", "Userreg", FormMethod.Post, new
    {
        enctype =
"multipart/form-data"
    }))
    {
        <div>
            <label>Name</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.name)
            @Html.ValidationMessageFor(m => m.name)
        </div>
        <div>
            <label>Age</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.age)
            @Html.ValidationMessageFor(m => m.age)
        </div>
        <div>
            <label>Address</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.address)
            @Html.ValidationMessageFor(m => m.address)
        </div>
        <div>
            <label>Email</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.email)
            @Html.ValidationMessageFor(m => m.email)
        </div>
        <div>
            <label>Phone Number</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.phone)
            @Html.ValidationMessageFor(m => m.phone)
        </div>
        <div>
            <label>Location</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.location)
            @Html.ValidationMessageFor(m => m.location)
        </div>
        <div>
            <label>Gender</label>
        </div>
        <div>
            Male
            @Html.RadioButtonFor(m => m.gen, "Male")
            Female
            @Html.RadioButtonFor(m => m.gen, "Female")
        </div>
        <div>
            <label>Qualification</label>
        </div>
        <div>
            @foreach (var item in Model.MyFavoriteQual)
            {
                <label>
                    <input type="checkbox" value="@item.Value" checked="@item.IsChecked"
                           name="selectedQual" id="@item.Value" /> @Html.Raw(@item.Text)
                    </label>
                }
        </div>
        <div>
            <label>Skills</label>
        </div>
        <div>
            @Html.TextAreaFor(m => m.skills)
            @Html.ValidationMessageFor(m => m.skills)
        </div>
        <div>
            <label>Experience</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.expr)
            @Html.ValidationMessageFor(m => m.expr)
        </div>
        <div>
            <label>Photo</label>
        </div>
        <div>
            @Html.TextBox("file", "", new { Type = "file" })
        </div>
        <div>
            <label>Username</label>
        </div>
        <div>
            @Html.TextBoxFor(m => m.uname)
        </div>
        <div>
            <label>Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.pwd)
        </div>
        <div>
            <label>Confirm Password</label>
        </div>
        <div>
            @Html.PasswordFor(m => m.cpwd)
            @Html.ValidationMessageFor(m => m.cpwd)
        </div>
        <div>
            <input type="submit" value="Register" />
            @Html.DisplayFor(m => m.umsg)
        </div>
    }
</div>

